<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3379fe"
            app:titleTextColor="#FFFFFF"
            app:title="도움말"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            style="@style/AppTheme"
            >
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/help_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="블루투스 연결"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"/>

    <Button
        android:id="@+id/help_getin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="그룹 가입"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"/>

    <Button
    android:id="@+id/help_groupriding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:text="그룹 라이딩 참여"
    android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"/>

    <Button
        android:id="@+id/help_riding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="라이딩 시 주의사항"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"/>

    <Button
        android:id="@+id/help_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="상세 기록 보기"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"/>

</LinearLayout>

