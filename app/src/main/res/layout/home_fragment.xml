<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:fitsSystemWindows="true"
    android:label="@string/title_home"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/mainbg"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/main_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#000000"/>


        <Button
            android:id="@+id/button_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/person"
            android:fontFamily="@font/nexongothiclight"
            android:gravity="center"
            android:shadowRadius="30"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginLeft="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainbg"
            android:onClick="personal_activity"/>

        <Button
            android:id="@+id/button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_btn"
            android:fontFamily="@font/nexongothiclight"
            android:gravity="center"
            android:shadowRadius="30"
            android:textColor="#FFFFFF"
            app:layout_constraintVertical_weight="1"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_single"
            app:layout_constraintTop_toBottomOf="@+id/mainbg"  />



</androidx.constraintlayout.widget.ConstraintLayout>