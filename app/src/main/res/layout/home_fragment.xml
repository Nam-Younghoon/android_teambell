<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:label="@string/title_home">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/team_bell"
        android:background="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="안전한 그룹 라이딩 App"
        android:gravity="center"
        android:textSize="25dp"
        android:background="#0E1A5C"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nexongothiclight"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/button_single"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="68dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/nexongothiclight"
            android:gravity="center"
            android:shadowRadius="30"
            android:text="개인 \n 라이딩"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="personal_activity"/>

        <Button
            android:id="@+id/button_group"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/nexongothiclight"
            android:gravity="center"
            android:shadowRadius="30"
            android:text="그룹 \n 라이딩"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_single"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>